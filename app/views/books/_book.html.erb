<div class="message">
  <div class="upper-message">
    <div class="message-date">
      <%= l book.created_at %>
    </div>
  </div>
  <div class="lower-message">
    <div class="message-content">
      <%= book.content %>
    </div>
    <%= image_tag book.image.variant(resize: '300x350'), class: 'book-image' if book.image.attached? %>
  </div>
</div>