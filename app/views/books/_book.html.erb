<div class="book-status">
        <div class="upper-book">
           <div class="book-date">
             <%= l book.created_at %>
           </div>
         </div>
         <div class="lower-book">
             <div class="book-content">
               <%= book.content %>
             </div>
             <%= image_tag book.image.variant(resize: '250x600'), class: 'book-image' if book.image.attached? %>
         </div>
   </div>